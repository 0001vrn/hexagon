<!--
 | Logback configuration for tests
 |
 | All output is ignored by default, to enable logs change root logger level.
 !-->
<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <Pattern>
        %d{HH:mm:ss.SSS} %highlight(%-5p) %magenta([%-10thread]) %-30logger{0} | %m%n
      </Pattern>
    </encoder>
  </appender>

  <appender name="data" class="co.there4.hexagon.log.TestAppender">
    <findCaller>true</findCaller>
  </appender>

  <root>
    <level value="off" />
  </root>

  <!-- Enable logging for Appender tests -->
  <logger name="co.there4.hexagon.log" level="debug">
    <appender-ref ref="data" />
  </logger>
</configuration>
